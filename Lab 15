public class Main {
    public static void main(String[] args) throws Exception {
        // You can test your solution here.
        System.out.println(pow(0,3));
    }

    // Write your recursive pow() method here.
    static int pow(int x, int y){
        if (y == 0)
        return 1;

        if (y == 1)
        return x;

        return x * pow (x, y - 1);
    }
    
}
